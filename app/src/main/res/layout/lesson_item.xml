<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="96dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hour_label"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:text="7:10-7:55"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group_name"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:text="GRUPA 1"
        android:layout_alignParentRight="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/data_container"
        android:layout_below="@id/hour_label">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subject_name"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:paddingTop="4dp"
            android:paddingLeft="16dp"
            android:text="Matematyka"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teacher_name"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:layout_below="@+id/subject_name"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Grażyna Śleszyńska (GŚ)"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/classroom_name"
            android:fontFamily="sans-serif-medium"
            android:textSize="34sp"
            android:paddingRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="209"/>

    </RelativeLayout>

    <View
        style="@style/Divider"
        android:layout_below="@+id/data_container"/>
</RelativeLayout>