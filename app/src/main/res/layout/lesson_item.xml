<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subjectName"
        android:fontFamily="sans-serif-medium"
        android:textSize="20sp"
        android:text="Matematyka"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groupName"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="GRUPA 1"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_marginRight="85dp"
        android:layout_above="@+id/teacherName"
        android:layout_toLeftOf="@+id/classroomName"
        android:layout_toStartOf="@+id/classroomName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grażyna Śleszyńska (GŚ)"
        android:id="@+id/teacherName"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:paddingLeft="16dp"
        android:paddingTop="10sp"
        android:layout_below="@+id/subjectName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="107"
        android:id="@+id/classroomName"
        android:fontFamily="sans-serif"
        android:textSize="36sp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:layout_gravity="right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>