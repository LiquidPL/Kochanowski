<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/drawer_layout"
                                        android:fitsSystemWindows="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="com.liquid.kochanowski.TimeTableTabActivity">

        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:minHeight="?android:actionBarSize"
            android:background="@color/primary"
            android:elevation="6dp"
            app:theme="@style/ToolbarDark"
            app:popupTheme="@style/Theme.AppCompat.Light"/>

        <com.liquid.kochanowski.widget.SlidingTabLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/sliding_tabs"
            android:layout_below="@+id/toolbar"
            android:background="@color/primary"
            android:elevation="6dp"/>

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/view_pager"
            android:layout_below="@+id/sliding_tabs"/>

    </RelativeLayout>

    <com.liquid.kochanowski.widget.ScrimInsetsFrameLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        app:insetForeground="#4000"
        android:layout_gravity="left|start"
        android:fitsSystemWindows="true"
        android:id="@+id/inset_layout"
        android:elevation="8dp">

        <org.lucasr.twowayview.widget.TwoWayView
            android:paddingTop="20dp"
            android:id="@+id/left_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_light"/>

    </com.liquid.kochanowski.widget.ScrimInsetsFrameLayout>

</android.support.v4.widget.DrawerLayout>