<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarDark" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white_100</item>

        <item name="android:actionMenuTextColor">@color/white_100</item>
        <item name="android:textColorSecondary">@color/white_100</item>
    </style>

    <style name="Ripple">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
</resources>
